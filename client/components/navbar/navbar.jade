md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id='left', md-is-locked-open="$mdMedia('gt-md')" ng-show="nav.isLoggedIn()")
  md-toolbar
    .md-toolbar-tools-bottom.inset(layout='column'  layout-align="space-around start")      
      img.avatar-picture(src="{{ nav.currentUser.picture }}"  alt="{{nav.currentUser.picture}}") 
      div.md-toolbar-tools-bottom
        .md-body-2 {{ nav.currentUser.name }}
        .md-body-1 {{ nav.currentUser.email }}
  md-content
    md-list
      md-list-item(ng-repeat='item in nav.menu' md-ink-ripple='' ng-click="nav.openLink(item.state)"  ui-sref-active="active-item")    
        md-item-content(layout='row', layout-align='start center')
          .inset
            i.material-icons {{item.icon}}
          .inset
            a(ui-sref="{{item.state}}") {{item.title}}
  md-divider
