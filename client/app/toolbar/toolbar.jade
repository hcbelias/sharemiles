md-toolbar.animate-show.md-whiteframe-z1(ng-hide='searchOpen')
  .md-toolbar-tools
    md-button.md-icon-button(ng-click="toggleSidenav('left')" hide-gt-md='' aria-label='Menu')
      i.material-icons menu
    h3
      | {{ title }}
    span(flex='')
    md-button.md-icon-button(aria-label='Search' ng-click='toggleSearch()' ng-show="showSearch")
      i.material-icons search
    md-button.md-icon-button(aria-label='{{ "AddPlace" | translate}}' ng-show="showAddPlace")
      a(ui-sref='place-form')
        i.material-icons add_location
    md-button.md-icon-button(aria-label='Login' ng-show="showLogin")
      a(ui-sref='login')
        i.material-icons account_circle  
    md-button.md-icon-button(aria-label='Logout' ng-show="showLogout")
      a(ui-sref='logout')
        i.material-icons exit_to_app

    
md-toolbar.animate-show.md-hue-1.md-whiteframe-z1(ng-show='searchOpen')
  .md-toolbar-tools
    md-button.md-icon-button(ng-click='toggleSearch()', aria-label='Menu')
      i.material-icons arrow_back      
    h3(role='button', ng-click='toggleSearch()')
    span(flex='100')
      md-autocomplete(md-theme='input', md-input-name='autocompleteField', md-no-cache='noCache', md-selected-item='selectedItem', md-search-text='searchText', md-items='item in querySearch(searchText)', md-item-text='item.display', placeholder='Search')
        md-item-template
          span(md-highlight-text='searchText') {{item.display}}
