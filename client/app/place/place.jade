div.inset(hide-sm="")
div(layout="row" layout-align="center center")
  md-card(flex flex-gt-sm='90', flex-gt-md='80')
    md-toolbar.animate-show.md-whiteframe-z1
      .md-toolbar-tools
        h3  {{ 'MyPlaces' | translate }}
    md-card-content
      md-list
        md-item(ng-repeat='item in $ctrl.placeList' layout='row')
          div(flex='20' layout="column" flex-gt-sm='5' layout-margin)
            md-icon.material-icons {{item.icon}}
          div(flex class="md-list-item-text" layout="column")
            h5 {{item.name}}
            h6 {{item.address}}
            h7 {{item.category}}
            md-divider
        
