div.inset(hide-sm="")
div(layout="row" layout-align="center center")
  md-card(flex flex-gt-sm='90', flex-gt-md='80')
    md-toolbar.animate-show.md-whiteframe-z1
      .md-toolbar-tools
        h3  {{ 'MyPlaces' | translate }}
    md-card-content
      md-list
        md-item(ng-repeat='item in $ctrl.placeList')
          md-item-content
            .md-tile-left.inset(hide-sm='')
              user-avatar
            .md-tile-content
              h5 {{item.name}}
              h6 {{item.address}}
              h7 {{item.category}}
          md-divider(md-inset='', hide-sm='', ng-if='!$last')
          md-divider(hide-gt-sm='', ng-if='!$last')
